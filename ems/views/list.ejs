    h1 {
      text-align: center;
      margin-top: 60px;
      margin-bottom: 40px;
      font-family: tahoma, sans-serif;
    }

    #table-ind {
      margin-left: auto;
      margin-right: auto;
      background:white;
      max-width: 800px;
      max-height: 400px;
    }
    .table {
     width: 100%;
    }
    td, th {
      border: 1px solid black;
     }
    th{
        background-color: lightgray;
   }
  </style>